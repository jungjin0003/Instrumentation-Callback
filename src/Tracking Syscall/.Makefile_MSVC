CC=cl.exe
LINK=link.exe
MASM=ml64.exe
CFLAGS=/c /D_NO_CRT_STDIO_INLINE /D_CRT_SECURE_NO_WARNINGS /Od /Z7
ASMFLAGS=/c
LDFLAGS=/NODEFAULTLIB:libcmt.lib /NODEFAULTLIB:msvcprt.lib /MANIFEST:NO /DEBUG:FULL /OPT:REF /OPT:ICF /OPT:LBR /OUT:main.exe
LDLIBS=ntdll.lib ..\lib\msvcrt.lib

all: main.exe

clean:
	del main.exe
	del main.pdb

main.obj:
	$(CC) $(CFLAGS) main.c

InstrumentationCallback.obj:
	$(CC) $(CFLAGS) ..\Common\InstrumentationCallback.c

InstrumentationCallbackAsm.obj:
	$(MASM) $(ASMFLAGS) /Fo InstrumentationCallbackAsm.obj ..\Common\InstrumentationCallback.asm

main.exe: main.obj InstrumentationCallback.obj InstrumentationCallbackAsm.obj
	$(LINK) $(LDFLAGS) main.obj InstrumentationCallback.obj InstrumentationCallbackAsm.obj $(LDLIBS)
	del *.obj